rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate homework data structure
    function isValidHomework() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'subject', 'description', 'dueDate', 'priority', 'isCompleted'])
        && data.userId is string
        && data.subject is string
        && data.description is string
        && data.dueDate is timestamp
        && data.priority in ['LOW', 'MEDIUM', 'HIGH', 'URGENT']
        && data.isCompleted is bool;
    }
    
    // Homeworks collection rules
    match /homeworks/{homeworkId} {
      // Allow read if user owns the homework
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated, owns the homework, and data is valid
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && isValidHomework();
      
      // Allow update if user owns the homework and userId doesn't change
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid
        && isValidHomework();
      
      // Allow delete if user owns the homework
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
